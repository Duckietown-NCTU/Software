file = {:Y$\backslash$:/[ NATARAJA SYSTEM ]/[ Cloud Gate ]/[ Eternal Library ]/[A2 - Mendeley Organizer]/2007 - Efficient RANSAC for point-cloud shape detection - Schnabel, Wahl, Klein.pdf:pdf},
isbn = {0167-7055},
issn = {01677055},
journal = {Computer Graphics Forum},
keywords = {Geometry analysis,Large point-clouds,Localized RANSAC,Primitive shapes,Shape fitting},
number = {2},
pages = {214--226},
